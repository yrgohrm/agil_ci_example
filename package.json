{
  "name": "ci_example",
  "version": "1.0.0",
  "description": "Simple example to use with CI/CD-pipeline",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "mocha",
    "doc": "jsdoc -r src"
  },
  "author": "Hampus Ram <hampus.ram@educ.goteborg.se>",
  "license": "MIT",
  "devDependencies": {
    "jsdoc": "^3.6.11",
    "mocha": "^8.4.0",
    "netlify-cli": "^3.39.4",
    "snowpack": "^3.8.8"
  },
  "snowpack": {
    "devOptions": {
      "bundle": false
    },
    "mount": {
      "public": "/",
      "src": "/js"
    },
    "optimize": {
      "bundle": true,
      "manifest": false,
      "minify": true,
      "target": "es2018"
    }
  }
}
